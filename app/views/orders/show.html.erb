<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Here's what's on its way to you ðŸŽ‚</h4>
    <h5><%= @order.email%></h5>
  </div>

   <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan='2'>Product</th>
          <th>Subtotal</th>
          <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @details.each do |product| %>
         
    <%= render 'item', product: product[:product_details], order: product[:order] %>


        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
          <span><%= humanized_money_with_symbol @order.total_cents/100 %></span>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
